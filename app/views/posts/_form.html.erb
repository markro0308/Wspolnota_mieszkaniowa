<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <h4 class="fw-normal"><%= form.label :title, "Tytuł" %></h4>
    <%= form.text_field :title, class:'shadow-sm fs-3'  %>
  </div>

  <div class="field">
    <h4 class="fw-normal"><%= form.label :content, "Treść" %></h4>
    <%= form.text_area :content, class:'shadow-sm' %>
  </div>

  <div class="actions">
    <%= form.submit :"Zapisz post", class:'btn link color-theme' %>
  </div>
<% end %>
