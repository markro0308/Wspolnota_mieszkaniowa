<style type="text/css">
    body {
      background: rgb(64,128,191);
      background: -moz-radial-gradient(circle, rgba(64,128,191,1) 14%, rgba(58,81,125,1) 85%, rgba(42,89,160,1) 100%, rgba(0,112,255,1) 100%);
      background: -webkit-radial-gradient(circle, rgba(64,128,191,1) 14%, rgba(58,81,125,1) 85%, rgba(42,89,160,1) 100%, rgba(0,112,255,1) 100%);
      background: radial-gradient(circle, rgba(64,128,191,1) 14%, rgba(58,81,125,1) 85%, rgba(42,89,160,1) 100%, rgba(0,112,255,1) 100%);
      filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#4080bf",endColorstr="#0070ff",GradientType=1);
    }
</style>

<div class="main">
  <div class="container-logo">
    <center>
    <div class="middle registration">
      <div id="login">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <fieldset class="clearfix">

            <p style="margin-bottom: 0;"><span class="ikona"><i class="fas fa-envelope"></i></span><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %></p>
            <% if @minimum_password_length %>
              <p><em>(minimum <%= @minimum_password_length %> znaków)</em></p>
            <% end %>
            <p style="margin-top:0"><span class="ikona"><i class="fa fa-lock"></i></span><%= f.password_field :password, autocomplete: "new-password", placeholder: "Hasło" %></p> 
            <p><span class="ikona"><i class="fa fa-lock"></i></span><%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Powtórz hasło" %></p>
            <p><span class="ikona"><i class="fa fa-user"></i></span><%= f.text_field :name, placeholder: "Imie" %></p>
            <p style="margin-bottom:0"><span class="ikona"><i class="fa fa-user"></i></span><%= f.text_field :surname, placeholder: "Nazwisko" %></p>
            <em>(licznik z wartości udziału oznaczający powierzchnię lokalu*100 -> liczba całkowita)</em>
            <p style="margin-bottom:0"><span class="ikona"><i class="fas fa-handshake"></i></span><%= f.number_field :part, placeholder: "Udział w nieruchomości" %></p>
            <div>
              <span style="width:35%; text-align:left;  display: inline-block;"><%= render "devise/shared/links" %></span>
              <span style="width:48%; text-align:right;  display: inline-block; margin-bottom:1em;"><%= f.submit "Zarejestruj się" %></span>
              <span><%= link_to "Strona głowna", home_index_path %></span>
            </div>
          </fieldset>
          <div class="clearfix"></div>
        <% end %>

        <div class="clearfix"></div>

      </div> <!-- end login -->
      <div class="logo">REJESTRACJA
            
        <div class="clearfix"></div>
      </div>
        
    </div>
    </center>
  </div>
</div>

